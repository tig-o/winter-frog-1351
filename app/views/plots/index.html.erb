<h1>Plots Index Page</h1>

<% @plots.each do |plot| %>
    <div id="plot<%= plot.id %>">
        <p>Plot Number: #<%= plot.number %></p>
            <% plot.plot_plants.each do |plot_plant| %>
                <div id="plant<%= plot_plant.plant_id %>">
                    <p>Plant: <%= plot_plant.plant.name %>
                    <%= link_to "Remove Plant", "/plot_plants/#{plot_plant.id}", method: :delete %></p>
                </div>
            <% end %>
    </div>
<% end %>